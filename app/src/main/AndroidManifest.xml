<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eemf.sirgoingfar.material_design_in_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SurfaceAndCircularRevealActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollableSurfaceActivity"
            android:theme="@style/ScrollableActivity" />

        <activity
            android:name=".ScrollableSurfaceTwoActivity"
            android:theme="@style/ScrollableActivityTwo" />
    </application>

</manifest>